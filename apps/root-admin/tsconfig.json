{
  "extends": "@swifty/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@components": ["./src/components"],
      "@lib": ["./src/lib"],
      "@hooks": ["./src/hooks/"],
      "@api": ["src/api"],
      "@type": ["./src/types"],
      "@styles/*": ["./src/styles/*"],
      "@icons/*": ["./public/icons/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "server.js"]
}

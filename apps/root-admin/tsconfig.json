{
  "extends": "@swifty/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@components": ["./src/components"],
      "@lib": ["./src/lib"],
      "@hooks/*": ["./src/hooks/*"],
      "@api": ["src/api"],
      "@type": ["./src/types"],
      "@styles/*": ["./src/styles/*"],
      "@icons/*": ["./public/icons/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js",
    "postcss.config.js"
  ],
  "exclude": ["node_modules", "server.js"]
}

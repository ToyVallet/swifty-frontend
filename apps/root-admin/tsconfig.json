{
  "extends": "@swifty/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/app/components/*"],
      "@lib/*": ["./src/app/lib/*"],
      "@hooks/*": ["./src/app/hooks/*"],
      "@api/*": ["./src/app/api/*"],
      "@store/*": ["./src/app/store/*"],
      "@type/*": ["./src/app/types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

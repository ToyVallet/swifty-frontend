{
  "extends": "@swifty/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@api/*": ["./src/api/*"],
      "@store/*": ["./src/store/*"],
      "@images/*": ["./public/images/*"],
      "@icons/*": ["./public/icons/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types", "./node_modules/@testing-library"],
    "types": ["jest", "jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js",
    "postcss.config.js"
  ],
  "exclude": ["node_modules", "server.js"]
}

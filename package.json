{
  "name": "swifty-frontend",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build-storybook": "turbo build:storybook",
    "chromatic": "turbo chromatic",
    "dev": "turbo dev",
    "dev:root": "turbo dev --filter root-admin",
    "dev:user": "turbo dev --filter user-web",
    "dev:ui": "turbo dev --filter @swifty/ui",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "test:watch": "turbo test:watch"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swifty/eslint-config": "*",
    "@swifty/typescript-config": "*",
    "@types/jest": "^29.5.12",
    "husky": "^7.0.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.4",
    "turbo": "latest",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "yarn@4.2.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}

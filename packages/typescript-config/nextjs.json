{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@app/*": [
        "./app/*"
      ],
      "@components/*": [
        "./app/components/*"
      ],
      "@lib/*": [
        "./app/lib/*"
      ],
      "@hooks/*": [
        "./app/hooks/*"
      ],
      "@api/*": [
        "./app/api/*"
      ],
      "@store/*": [
        "./app/store/*"
      ],
      "@images/*": [
        "./public/images/*"
      ],
      "@icons/*": [
        "./public/icons/*"
      ],
      "@constant/*": [
        "./constant/*"
      ],
    }
  }
}
